@model IEnumerable<Receitas_XPTO.Models.Categoria>

@{
    ViewBag.Title = "Index";
}
<br/>
<h2>Categorias</h2>


<table class="table">
    <tr>
        <th>
            Categoria
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CategoriaNome)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.CategoriaID }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.CategoriaID }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.CategoriaID })
        </td>
    </tr>
}

</table>

<p>
    @Html.ActionLink("Criar nova", "Create")
</p>
