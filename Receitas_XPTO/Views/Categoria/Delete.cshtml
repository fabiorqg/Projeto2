@model Receitas_XPTO.Models.Categoria

@{
    ViewBag.Title = "Delete";
}
<br />
<h2>Eliminar</h2>

<h3>Tem a certeza que quer eliminar esta categoria?</h3>
<div>
    <h4>Categoria</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nome da categoria
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CategoriaNome)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Eliminar" class="btn btn-red" /> |
            @Html.ActionLink("Voltar", "Index")
        </div>
    }
</div>
