@model Receitas_XPTO.Models.Receita

@{
    ViewBag.Title = "Delete";
}

<h2>Eliminar receita.</h2>

<h3>Tem a certeza que quer eliminar esta receita?</h3>
<div>
    @*<h4>Receita</h4>*@
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nome da receita
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ReceitaNome)
        </dd>

        <dt>
            Categoria
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Categoria.CategoriaNome)
        </dd>

        <dt>
            Dificuldade
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Dificuldade.Dificuldade)
        </dd>

        <dt>
            Duração
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Duracao)
        </dd>

        <dt>
            Descrição
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Descricao)
        </dd>

        <dt>
            Utilizador que submeteu
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Utilizador.Username)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Eliminar" class="btn btn-danger" /> |
            @Html.ActionLink("Voltar", "Index")
        </div>
    }
</div>
